%description
this is a plugin for nagios

%prep
%setup -q


%build
%configure
make %{?_smp_mflags}
#copy shell script here***


%install
rm -rf %{buildroot}
mkdir -p %{buildroot}/%{_bindir}
cp /home/Jonathan/rpmbuild/SOURCES/install /home/Jonathan/rpmbuild/BUILD/check_jwade005_plugin-1.0/

make install DESTDIR=%{buildroot}
install -m 0755 %{name} %{buildroot}/%{_bindir}/%{name}

%clean
rm -rf %{buildroot}

%files
/usr/lib64/nagios/plugins/check_jwade005_plugin (-,root,nagios)
/usr/lib64/nagios/plugins/install

%post
./usr/lib64/nagios/plugins/install

%doc



%changelog
* Thu May 11 2017 jonathan wade <jwade005@seattlecentral.edu> 1.0.1
- Added support for post install script
